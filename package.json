{
    "name": "somebuild",
    "private": true,
    "scripts": {
        "new": "tsx scripts/new.ts",
        "build": "run-s del build:cli gen-typedoc",
        "preinstall": "npx only-allow pnpm",
        "poststop": "pnpm i",
        "dev:cli": "turbo run dev --filter somebuild...",
        "del": "rimraf -g packages/*/dist",
        "build:a": "turbo run build --filter somebuild...",
        "build:cli": "pnpm --filter ./packages/** build",
        "dev": "tsx scripts/run.ts",
        "commit": "changeset",
        "version": "changeset version",
        "release": "pnpm  --filter ./packages/** publish --access public",
        "docs:dev": "pnpm --filter website docs:dev",
        "docs:build": "pnpm --filter website docs:build",
        "docs:preview": "pnpm --filter website docs:preview",
        "gen-typedoc": "api-extractor run -l",
        "test": "vitest",
        "coverage": "vitest run --coverage"
    },
    "keywords": [],
    "author": "npmrun",
    "license": "ISC",
    "dependencies": {
        "@changesets/cli": "^2.26.1",
        "@manypkg/get-packages": "^2.1.0",
        "@niu-tools/core": "^0.0.12",
        "@noderun/tsconfig": "^0.0.2",
        "@types/ejs": "^3.1.2",
        "@types/fs-extra": "^11.0.1",
        "@types/inquirer": "^9.0.3",
        "@types/node": "^18.16.0",
        "chalk": "^5.2.0",
        "cross-env": "^7.0.3",
        "ejs": "^3.1.9",
        "execa": "^7.1.1",
        "fs-extra": "^11.1.1",
        "inquirer": "^9.1.5",
        "npm-run-all": "^4.1.5",
        "rimraf": "^5.0.0",
        "rollup": "^3.21.2",
        "somebuild": "workspace:*",
        "tsc-alias": "^1.8.6",
        "tsup": "^6.7.0",
        "tsx": "^3.12.6",
        "turbo": "^1.9.3",
        "typescript": "^5.0.4",
        "vitest": "^0.32.0"
    },
    "devDependencies": {
        "@microsoft/api-extractor": "^7.35.1",
        "mock-fs": "^5.2.0"
    }
}
