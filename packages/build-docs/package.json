{
    "name": "@somebuild/build-docs",
    "version": "0.0.2",
    "type": "module",
    "description": "生成文档，类似于vitepress",
    "main": "dist/build-docs.js",
    "types": "dist/build-docs.d.ts",
    "files": [
        "dist",
        "type.d.ts"
    ],
    "scripts": {
        "dev": "tsup --watch",
        "build-client": "vue-tsc --noEmit -p src/client && tsc -p src/client/tsconfig.json && tsc-alias -p src/client/tsconfig.json && node scripts/copyClient",
        "build-node": "tsup",
        "build-prepare": "rimraf dist",
        "build": "run-s build-prepare build-node build-client"
    },
    "keywords": [],
    "author": "noderun",
    "license": "ISC",
    "peerDependencies": {
        "somebuild": "*"
    },
    "dependencies": {
        "@vitejs/plugin-vue": "^4.2.1",
        "@vitejs/plugin-vue-jsx": "^3.0.1",
        "fast-glob": "^3.2.12",
        "highlight.js": "^11.7.0",
        "lodash-es": "^4.17.21",
        "markdown-it": "^13.0.1",
        "markdown-it-anchor": "^8.6.7",
        "npm-run-all": "^4.1.5",
        "sass": "^1.62.1",
        "transliteration": "^2.3.5",
        "tsc-alias": "^1.8.5",
        "typescript": "^5.0.4",
        "vite": "^4.3.3",
        "vite-plugin-dts": "^2.3.0",
        "vite-plugin-md": "^0.21.5",
        "vite-plugin-windicss": "^1.8.10",
        "vue": "^3.2.47",
        "vue-router": "^4.1.6",
        "vue-tsc": "^1.6.0",
        "windicss": "^3.5.6"
    },
    "devDependencies": {
        "@types/markdown-it": "^12.2.3"
    }
}
